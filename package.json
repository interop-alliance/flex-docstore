{
  "name": "flex-docstore",
  "version": "0.1.2",
  "engines": {
    "node": ">=8.10"
  },
  "description": "JSON Document store with flexible backend (files on fs, PouchDB, etc)",
  "main": "./src/store",
  "files": [
    "src"
  ],
  "scripts": {
    "prepare": "npm test",
    "standard": "standard",
    "mocha": "nyc mocha ./test/*.spec.js",
    "test": "npm run standard && npm run mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/interop-alliance/flex-docstore"
  },
  "keywords": [
    "store",
    "persistence",
    "kv",
    "json",
    "document",
    "decentralized",
    "key",
    "store",
    "value"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/interop-alliance/flex-docstore/issues"
  },
  "homepage": "https://github.com/interop-alliance/flex-docstore",
  "dependencies": {
    "fs-json-store": "^8.0.1",
    "glob": "^7.2.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dirty-chai": "^2.0.1",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "standard": "^16.0.4"
  },
  "nyc": {
    "reporter": [
      "html",
      "text-summary"
    ],
    "cache": true
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ]
  }
}
